<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>User Notifications</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Segoe UI', sans-serif;
      background: linear-gradient(to bottom right, #0f2027, #203a43, #2c5364);
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
    }

    .card {
      background: #fff;
      width: 95%;
      max-width: 500px;
      border-radius: 16px;
      padding: 30px 28px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
      text-align: center;
    }

    h1 {
      color: #222;
      margin-bottom: 5px;
      font-size: 24px;
      font-weight: bold;
      position: relative;
    }

    .badge {
      background: red;
      color: white;
      font-size: 14px;
      padding: 2px 10px;
      border-radius: 12px;
      position: absolute;
      right: 10px;
      top: 0;
    }

    ul {
      list-style: none;
      padding: 0;
      margin: 0;
      text-align: left;
    }

    .notification {
      padding: 18px;
      border-radius: 12px;
      margin-bottom: 20px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
      background-color: #e4e4e4;
    }

    .notification.unread {
      background-color: #cce5ff;
    }

    .notification strong {
      color: #007bff;
      font-size: 16px;
      display: block;
      margin-bottom: 6px;
    }

    .notification p {
      font-size: 15px;
      margin: 6px 0 10px;
      color: #333;
    }

    .notification small {
      font-size: 12px;
      color: #666;
    }

    .btn-wrapper {
      margin-top: 12px;
      background: #007bff;
      display: inline-block;
      padding: 8px 16px;
      border-radius: 8px;
    }

    .btn-submit {
      background: none;
      border: none;
      color: white;
      font-size: 14px;
      font-weight: bold;
      cursor: pointer;
    }

    .btn-submit:hover {
      text-decoration: underline;
    }

    .nav-link {
      display: inline-block;
      margin-top: 10px;
      margin-bottom: 20px;
      text-decoration: none;
      color: #007bff;
      font-weight: 700;
      font-size: 18px;
      text-align: center;
    }

    .nav-link:hover {
      text-decoration: underline;
    }

    .error-msg {
      color: red;
      margin-bottom: 12px;
      font-size: 14px;
    }

    .success-msg {
      color: green;
      font-size: 14px;
      margin-bottom: 10px;
    }
  </style>
</head>
<body>

  <div class="card">
    <h1>
      User Notifications
      
      <% if (unreadCount && unreadCount > 0) { %>
        <span class="badge"><%= unreadCount %></span>
      <% } %>
      </h1>

      <a href="/email/generate-email" class="nav-link">â¬… Back to Dashboard</a>
    

    <% if (notifications.length === 0) { %>
      <p class="error-msg">No notifications available.</p>
    <% } else { %>
      
      <ul>
        <% notifications.forEach(n => { %>
          <li class="notification <%= n.isRead ? 'read' : 'unread' %>">
            <strong><%= n.title %></strong>
            <p><%= n.message %></p>
            <small><%= n.formattedDate %></small>

            <% if (!n.isRead) { %>
              <div class="btn-wrapper">
                <form action="/user/notifications/<%= n._id %>/read" method="POST">
                  <button type="submit" class="btn-submit">Mark as Read</button>
                </form>
              </div>
            <% } %>
          </li>
        <% }); %>
      </ul>
    <% } %>

    
  </div>

</body>
</html>










